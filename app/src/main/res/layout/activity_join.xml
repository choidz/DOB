<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_layout"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#0f0f0f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pwdChk"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:hint="비밀번호 입력"
        android:textColor="#111111"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:background="#E1E1E1"
        android:backgroundTint="#E1E1E1"
        android:text="중복확인"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/joinId"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="이름"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/joinName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="비밀번호"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/joinPwd"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="아이디"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/joinId"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/joinPwd"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:hint="8~16자의 영문/숫자 조합으로 입력"
        android:textColor="#111111"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/join_Agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="이용약관 동의"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwdChk"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/joinName"
        android:layout_width="365dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:hint="성명을 입력"
        android:textColor="#111111"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="비밀번호 확인"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pwdChk"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/joinId"
        android:layout_width="365dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:hint="3~10자의 영문/숫자 조합으로 입력"
        android:textColor="#111111"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="24dp"
        android:background="#FFEB3B"
        android:text="회원가입"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/cancelBtn"
        app:layout_constraintTop_toBottomOf="@+id/join_Agree" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="#E1E1E1"
        android:text="가입취소"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_Agree" />


</androidx.constraintlayout.widget.ConstraintLayout>